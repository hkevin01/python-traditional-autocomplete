{
    "workbench.colorTheme": "Material Theme Ocean",
    "workbench.colorCustomizations": {
        "activityBar.background": "#0f111a",
        "sideBar.background": "#0f111a",
        "editor.background": "#0f111a",
        "statusBar.background": "#84ffff",
        "titleBar.activeBackground": "#0f111a"
    },
    
    // === COMPLETELY DISABLE COPILOT & ALL AI FEATURES ===
    "github.copilot.enable": {
        "*": false,
        "python": false,
        "markdown": false,
        "plaintext": false,
        "yaml": false,
        "json": false,
        "javascript": false,
        "typescript": false,
        "jupyter": false,
        "notebook": false,
        "ipynb": false
    },
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.chat.enabled": false,
    "github.copilot.advanced": {},
    "editor.inlineSuggest.enabled": false,
    
    // Disable all AI-powered features
    "chat.tools.global.autoApprove": false,
    "workbench.commandPalette.experimental.suggestCommands": false,
    
    // === AUTOMATIC VENV ACTIVATION ===
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "terminal.integrated.env.linux": {
        "VIRTUAL_ENV": "${workspaceFolder}/venv",
        "PATH": "${workspaceFolder}/venv/bin:${env:PATH}"
    },
    "terminal.integrated.defaultProfile.linux": "bash (venv auto-activate)",
    "terminal.integrated.profiles.linux": {
        "bash (venv auto-activate)": {
            "path": "bash",
            "args": ["--init-file", "${workspaceFolder}/.vscode/activate_venv.sh"]
        }
    },
    
    // === JUPYTER LSP AND AUTOCOMPLETE ===
    "jupyter.enableExtendedPythonKernelCompletions": true,
    "jupyter.pythonCompletionTriggerCharacters": ["."],
    "jupyter.completionTriggerCharacters": [".", "[", "\"", "'"],
    "jupyter.languageServer": "Pylance",
    "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.kernels.filter": [],
    
    // === NOTEBOOK SETTINGS ===
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "notebook.lineNumbers": "on",
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {},
    "notebook.diff.enablePreview": true,
    "notebook.output.textLineLimit": 30,
    
    // Notebook IntelliSense
    "notebook.experimental.remoteSave": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    
    // === ENABLE TRADITIONAL PYTHON AUTOCOMPLETE ===
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.indexing": true,
    "python.analysis.useLibraryCodeForTypes": true,
    
    // Enhanced Python Analysis
    "python.analysis.extraPaths": [
        "${workspaceFolder}/venv/lib/python3.12/site-packages"
    ],
    "python.analysis.packageIndexDepths": [
        {"name": "pandas", "depth": 3},
        {"name": "numpy", "depth": 3},
        {"name": "matplotlib", "depth": 3},
        {"name": "pyspark", "depth": 3}
    ],
    
    // Point to venv Python interpreter
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
    "jupyter.kernels.trusted": ["${workspaceFolder}/venv/bin/python"],
    
    // === TRADITIONAL INTELLISENSE FEATURES ===
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "editor.suggest.showWords": true,
    "editor.wordBasedSuggestions": "allDocuments",
    "editor.suggestOnTriggerCharacters": true,
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.parameterHints.enabled": true,
    "editor.hover.enabled": "on",
    "editor.codeLens": true,
    
    // === PYTHON SNIPPETS & COMPLETIONS ===
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    
    // === AUTO CLOSE & FORMATTING ===
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoSurround": "languageDefined",
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": true,
    
    // === BRACKET PAIR COLORIZATION ===
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    
    // === PATH AUTOCOMPLETE ===
    "path-autocomplete.pathMappings": {
        "/": "${workspace}"
    },
    
    // === PYTHON SPECIFIC SETTINGS ===
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    
    // === TRADITIONAL EXTENSION RECOMMENDATIONS ===
    "extensions.ignoreRecommendations": false,
    
    // === EDITOR ENHANCEMENTS ===
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "selection",
    "editor.suggestSelection": "first",
    "editor.snippetSuggestions": "top",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    
    // === STATUS BAR INDICATOR ===
    "window.title": "${rootName} - [COPILOT DISABLED] - (venv)"
}
